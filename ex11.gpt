/*
 * Instrucoes para compilar:
 * $gpt exN.gpt -o exN.gpt.x
 */
algoritmo BattleOfForro;

variáveis
    opcao, x : inteiro;
fim-variáveis

início
    exibirMenu();
fim

função exibirMenu()
início
    imprima("=====================================\n");
    imprima("    Bem-vindo ao Battle of Forro!    \n");
    imprima("=====================================\n");
    imprima("Pressione 1 para iniciar sua batalha.\n");
    imprima("Pressione 2 para sair.\n: ");
    opcao := leia();

    se opcao = 1 então
        imprima("Você acorda e percebe que todo o seu time está morto, mas também sobrou um oponente para você encarar. Você, como um guerreiro conhecido como centurião, decide lutar, porém seu oponente não é nada fraco. Ele é o Lawbringer, um cavaleiro com 195 cm, pesando mais de 100kg, com uma armadura super resistente e portando um poleaxe, uma arma versátil de combate medieval, com cabo de mais de 2m, lâmina afiada, martelo esmagador e uma ponta perfurante.\n");
        imprima("Unindo força e precisão, à sua frente há duas escolhas de armas para pegar. Escolha com sabedoria.\n");
        imprima("(1) Espada Gladius\n");
        imprima("(2) Epsilon Axe\n: ");
        x := leia();

        se x = 1 então
            imprima("Gladius, por ser uma espada padrão dos soldados romanos, curta e ideal para combates corpo a corpo, eficiente tanto para cortes quanto para estocadas rápidas, era perfeita para você que havia treinado sua vida toda com ela.\n");
        senão
            se x = 2 então
                imprima("Você nunca tinha visto uma arma como essa antes, logo não tinha ideia de como usá-la, dando chance para o Lawbringer atacá-lo e arrancar sua cabeça.\n");
                retorne;
            fim-se
        fim-se

        se x > 2 então
            imprima("Essa opção não existe. Você fica parado olhando para o chão e tem o corpo perfurado pelo poleaxe do Lawbringer, assim morrendo.\n");
            retorne;
        fim-se

        imprima("Você com sua Gladius entra em um combate épico contra o Lawbringer até que ele grita 'AD MORTEM INIMICUS' lançando um ataque cortante extremamente poderoso com o poleaxe na sua direção. Você rapidamente pensa em:\n");
        imprima("(3) Esquivar do ataque\n");
        imprima("(4) Dar um soco nele\n: ");
        x := leia();

        se x = 3 então
            imprima("Você tenta esquivar-se do golpe, porém o golpe varre uma área muito maior do que você imaginou e acaba sendo atingido por ele, sendo partido ao meio. Você morre, deixando sua equipe desapontada.\n");
            retorne;
        senão
            se x = 4 então
                imprima("Você desfere não um soco qualquer, mas sim um soco capaz de quebrar paredes! Antes do golpe atingir Lawbringer, você grita 'INCREDIBILIS', derrubando-o no chão e deixando uma abertura para perfurar a barriga dele com sua espada Gladius. Assim, você o mata, deixando todo o seu time orgulhoso por derrotar um oponente tão formidável.\n");
            fim-se
        fim-se

        se x > 4 então
            imprima("Essa opção não existe. Você morreu.\n");
            retorne;
        fim-se

        imprima("Fim de Jogo. Pressione 3 para sair.\n: ");

        enquanto opcao <> 3 faça
            opcao := leia();
            se opcao <> 3 então
                imprima("Opção inválida. Pressione 3 para sair.\n");
            fim-se
        fim-enquanto

        imprima("Saindo do jogo... Até logo guerreiro!\n");
    senão
        se opcao = 2 então
            imprima("Saindo do jogo... Até logo guerreiro!\n");
        senão
            se opcao > 2 então
                imprima("Opção inválida. Tente novamente.\n");
                exibirMenu();
            fim-se
        fim-se
    fim-se
fim
